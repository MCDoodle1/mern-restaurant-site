{
  "name": "mern-restaurant-site",
  "version": "1.0.0",
  "description": "Restaurant application using MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start-server": "nodemon server.js --ignore '/client/'",
    "start-client": "npm start --prefix client",
    "dev": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "install": "cd server && npm i && cd ../client && npm i --production=false",
    "build": "cd client && npm run build",
    "render-build": "npm install && npm run build"
  },
  "author": "Marco Clarijs",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.3",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.2",
    "stripe": "^12.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.1",
    "morgan": "^1.10.0"
  }
}
